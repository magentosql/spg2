<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">

    <route url="/V1/carts/mine/estimate-shipping-methods" method="POST">
        <service class="Unirgy\DropshipSplit\Model\ShippingMethodManagementInterface" method="estimateByExtendedAddress"/>
        <resources>
            <resource ref="self" />
        </resources>
        <data>
            <parameter name="cartId" force="true">%cart_id%</parameter>
        </data>
    </route>

    <route url="/V1/carts/mine/estimate-shipping-methods-by-address-id" method="POST">
        <service class="Unirgy\DropshipSplit\Model\ShippingMethodManagementInterface" method="estimateByAddressId"/>
        <resources>
            <resource ref="self" />
        </resources>
        <data>
            <parameter name="cartId" force="true">%cart_id%</parameter>
        </data>
    </route>

    <route url="/V1/guest-carts/:cartId/estimate-shipping-methods" method="POST">
        <service class="Unirgy\DropshipSplit\Model\GuestShippingMethodManagementInterface" method="estimateByExtendedAddress"/>
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>

    <!-- Managing shipping guest information -->
    <route url="/V1/guest-carts/:cartId/shipping-information" method="POST">
        <service class="Unirgy\DropshipSplit\Model\GuestShippingInformationManagementInterface" method="saveAddressInformation"/>
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>

    <!-- Managing My shipping information -->
    <route url="/V1/carts/mine/shipping-information" method="POST">
        <service class="Unirgy\DropshipSplit\Model\ShippingInformationManagementInterface" method="saveAddressInformation"/>
        <resources>
            <resource ref="self" />
        </resources>
        <data>
            <parameter name="cartId" force="true">%cart_id%</parameter>
        </data>
    </route>

    <!-- Managing shipping information-->
    <route url="/V1/carts/:cartId/shipping-information" method="POST">
        <service class="Unirgy\DropshipSplit\Model\ShippingInformationManagementInterface" method="saveAddressInformation"/>
        <resources>
            <resource ref="Magento_Cart::manage" />
        </resources>
    </route>

    <route url="/V1/carts/:cartId/totals-information" method="POST">
        <service class="Unirgy\DropshipSplit\Model\TotalsInformationManagementInterface" method="calculate"/>
        <resources>
            <resource ref="Magento_Cart::manage" />
        </resources>
    </route>

    <!-- Managing guest totals information -->
    <route url="/V1/guest-carts/:cartId/totals-information" method="POST">
        <service class="Unirgy\DropshipSplit\Model\GuestTotalsInformationManagementInterface" method="calculate"/>
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>

    <!-- Managing My totals information -->
    <route url="/V1/carts/mine/totals-information" method="POST">
        <service class="Unirgy\DropshipSplit\Model\TotalsInformationManagementInterface" method="calculate"/>
        <resources>
            <resource ref="self" />
        </resources>
        <data>
            <parameter name="cartId" force="true">%cart_id%</parameter>
        </data>
    </route>

</routes>
