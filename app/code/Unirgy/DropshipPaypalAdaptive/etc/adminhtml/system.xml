<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="udropship">
            <group id="payout_paypal">
                <field id="appid" translate="label" sortOrder="210" type="text" showInDefault="1" showInWebsite="1">
                    <label>Application ID</label>
                </field>
            </group>
        </section>
        <section id="payment">
            <group id="paypal_payments"/>
        </section>
        <section id="payment_other">
            <group id="paypal_payment_solutions">
            <include path="Unirgy_DropshipPaypalAdaptive::system/paypal_adaptive.xml"/>
            </group>
        </section>
        <section id="payment_de">
            <group id="paypal_payment_solutions">
            <include path="Unirgy_DropshipPaypalAdaptive::system/paypal_adaptive.xml"/>
            </group>
        </section>
        <section id="payment_us">
            <group id="paypal_group_all_in_one">
            <include path="Unirgy_DropshipPaypalAdaptive::system/paypal_adaptive.xml"/>
            </group>
        </section>
        <section id="payment_gb">
            <group id="paypal_group_all_in_one">
                <include path="Unirgy_DropshipPaypalAdaptive::system/paypal_adaptive.xml"/>
            </group>
        </section>
    </system>
</config>